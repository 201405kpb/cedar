  var tmplUrl = "/data/templates/scatter-template.json";
  Cedar.getJson(tmplUrl, function(err,template){
    if(err){
      console.error(err);
      return;
    }
    //cook the spec
    var chartJson = Cedar.generateChart(template, serviceUrl, fieldMappings);
